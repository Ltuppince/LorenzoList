
<div class="container">
    <div class="uk-card uk-card-body" data-cat="{{items.dataValues.CategoryId}}">
        <h3 class="uk-card-title">{{items.dataValues.title}}</h3>
        <p>${{items.dataValues.price}}</p>
        <img src="{{items.dataValues.img}}" alt="Item Image"/>
        <p>{{items.dataValues.post}}</p>
    </div>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#messageModal" data-seller={{items.dataValues.UserId}}>Contact Seller</button>

    <div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="messageModalLabel">{{items.dataValues.title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form>
            <div class="form-group">
                {{!-- <label for="recipient-name" class="col-form-label">Seller</label> --}}
                <input type="hidden" class="form-control" id="recipient-name" value="{{items.dataValues.UserId}}">
                <input type="hidden" class="form-control" id="item-id" value={{items.dataValues.id}}>
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Message:</label>
                <textarea class="form-control" id="message-text"></textarea>
            </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="btn-send-message-ID">Send message</button>
        </div>
        </div>
    </div>
    </div>

</div>